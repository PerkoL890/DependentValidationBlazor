<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>Angelo Rotta</Authors>
    <Company />
    <Description>
      DependentValidation is a netstandard2.0 library that extends the System.ComponentModel.DataAnnotations with conditional attributes based on another property of the validated object.

      The new attributes are the following:

      - RequiredIf
      - RequiredIfEmpty
      - RequiredIfFalse
      - RequiredIfNot
      - RequiredIfNotEmpty
      - RequiredIfNotRegExMatch
      - RequiredIfRegExMatch
      - RequiredIfTrue
      - RegularExpressionIf
      - Is
      - EqualTo
      - GreaterThan
      - GreaterThanOrEqualTo
      - LessThan
      - LessThanOrEqualTo
      - NotEqualTo
    </Description>
    <PackageTags>validation, dependent, conditional, requiredif, greaterthan, lessthan</PackageTags>
    <Version>1.2.1</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Abstractions" Version="2.2.0" />
    <PackageReference Include="System.ComponentModel.Annotations" Version="4.7.0" />
  </ItemGroup>

</Project>
